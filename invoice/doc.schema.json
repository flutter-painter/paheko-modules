{
	"$schema": "https://json-schema.org/draft/2020-12/schema",
	"type": "object",
	"properties": {
		"number": {
			"type": ["string", "null"]
		},
		"type": {
			"type": "string",
			"enum": ["invoice", "quote"]
		},
		"label": {
			"type": "string"
		},
		"date": {
			"type": "string",
			"format": "date"
		},
		"date_expiry": {
			"type": ["string", "null"],
			"format": "date"
		},
		"date_sent": {
			"type": ["string", "null"],
			"format": "date"
		},
		"status": {
			"type": "string",
			"enum": ["draft", "waiting", "ok", "cancelled"]
		},
		"total": {
			"type": "integer",
			"minimum": 0
		},
		"client_name": {
			"type": "string"
		},
		"client_address": {
			"type": "string"
		},
		"client_email": {
			"type": ["null", "string"]
		},
		"client": {
			"type": ["null", "string"]
		},
		"header_text": {
			"type": ["null", "string"]
		},
		"id_transaction": {
			"type": ["null", "integer"]
		},
		"payments": {
			"type": "array",
			"items": {
				"type": "integer"
			}
		},
		"quote": {
			"type": ["null", "string"]
		},
		"invoice": {
			"type": ["null", "string"]
		},
		"html": {
			"description": "HTML content of generated invoice",
			"type": ["null", "string"]
		}
	},
	"required": [
		"number",
		"type",
		"label",
		"date",
		"date_expiry",
		"status",
		"client_name",
		"client_address",
		"client_email",
		"client",
		"header_text"
	]
}