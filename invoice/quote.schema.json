{
	"$schema": "https://json-schema.org/draft/2020-12/schema",
	"type": "object",
	"properties": {
		"number": {
			"type": ["null", "integer"],
		},
		"type": {
			"type": "string",
			"enum": ["quote"]
		},
		"label": {
			"description": "Libellé",
			"type": "string"
		},
		"description": {
			"description": "Description",
			"type": "string"
		},
		"date": {
			"description": "Date d'émission",
			"type": "string",
			"format": "date"
		},
		"date_expiry": {
			"description": "Date d'échéance",
			"type": ["string", "null"],
			"format": "date"
		},
		"date_sent": {
			"type": ["string", "null"],
			"format": "date"
		},
		"status": {
			"description": "Statut",
			"type": "string",
			"enum": ["draft", "waiting", "accepted", "refused"]
		},
		"total": {
			"description": "Montant total",
			"type": "integer",
			"minimum": 0
		},
		"client_name": {
			"description": "Name of client",
			"type": ["null", "string"]
		},
		"client": {
			"description": "UUID of client",
			"type": ["null", "string"]
		},
		"id_user": {
			"description": "ID of user",
			"type": ["null", "integer"]
		},
		"invoice": {
			"description": "UUID of resulting invoice",
			"type": ["null", "string"]
		},
		"footer_text": {
			"description": "Notes de bas de page",
			"type": ["null", "string"]
		},
		"html": {
			"description": "HTML content of generated invoice",
			"type": ["null", "string"]
		}
	},
	"required": [ "number", "type", "label", "description", "date", "date_expiry", "date_sent",
		"status", "total", "id_user", "client_name", "client", "invoice", "footer_text", "html" ]
}