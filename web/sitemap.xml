<?xml version="1.0" encoding="UTF-8"?>
<urlset xmlns="http://www.sitemaps.org/schemas/sitemap/0.9">
{{#pages limit=1 order="modified DESC"}}
	<url>
		<loc>{{$root_url}}</loc>
		<lastmod>{{$modified|atom_date}}</lastmod>
	</url>
{{/pages}}

{{#pages limit=10000}}
	<url>
		<loc>{{$url}}</loc>
		<lastmod>{{$modified|atom_date}}</lastmod>
	</url>
{{/pages}}
</urlset>
