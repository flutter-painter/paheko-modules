{
	"$schema": "https://json-schema.org/draft/2020-12/schema",
	"type": "object",
	"properties": {
		"label": {
			"type": "string"
		},
		"description": {
			"type": ["null", "string"]
		},
		"use_closings": {
			"type": "boolean"
		},
		"fields": {
			"type": "array",
			"items": {
				"type": "object",
				"properties": {
					"type": {
						"type": "string"
					},
					"label": {
						"type": "string"
					},
					"help": {
						"type": ["string", "null"]
					},
					"required": {
						"type": "boolean"
					}
				},
				"required": ["type", "label", "help"]
			}
		},
		"email": {
			"type": "boolean"
		}
	},
	"required": ["label", "description", "use_closings", "fields", "email"]
}